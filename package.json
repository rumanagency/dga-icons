{
  "name": "@ruman/dga-icons-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Multi-platform icon library with 39,000+ icons across 9 styles for React, Vue, Angular, Svelte, and more",
  "repository": {
    "type": "git",
    "url": "https://github.com/rumanagency/dga-icons.git"
  },
  "author": "Ruman Agency <hello@ruman.sa> (https://ruman.sa)",
  "license": "MIT",
  "homepage": "https://github.com/rumanagency/dga-icons#readme",
  "bugs": {
    "url": "https://github.com/rumanagency/dga-icons/issues"
  },
  "keywords": [
    "icons",
    "svg",
    "react",
    "vue",
    "angular",
    "svelte",
    "icon-library",
    "dga",
    "saudi",
    "hugeicons"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "ci": "pnpm run lint && pnpm run type-check && pnpm run test && pnpm run build",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.4",
    "turbo": "^2.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "workspaces": [
    "packages/*",
    "tools/*"
  ]
}
